<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Check_Box">


    <LinearLayout
        android:layout_width="394dp"
        android:layout_height="711dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Selecciona tu Buscador favorito"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/check_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Google"
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/check_big"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Big"
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/check_yahoo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yahoo"
            android:textSize="24sp" />

        <Button
            android:id="@+id/write_result"
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="Aceptar"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text=""
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>